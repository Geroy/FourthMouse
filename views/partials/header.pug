.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand.logo(href='/')
        text Fourth Mouse
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        if user
          li(class=(title == 'Matches') ? 'active' : undefined)
            a(href='/matches')
              i.fa.fa-heart-o  matches
        li(class=(title == 'Contact') ? 'active' : undefined)
          a(href='/contact') Contact
      ul.nav.navbar-nav.navbar-right
        if !user
          li(class=(title == 'Login') ? 'active' : undefined)
            a(href='/login') Login
          li(class=(title == 'Create Account') ? 'active' : undefined)
            a(href='/signup') Create Account
        else
          li(class=(title == 'Account') ? 'active' : undefined)
            a(href='/account')
              if user.profile.picture
                img(src=user.profile.picture)
              else
                i.fa.fa-user.fa-3
              text Profile
          li(class=(title == 'Logout') ? 'active' : undefined)
            a(href='/logout')
              i.fa.fa-sign-out  Logout
